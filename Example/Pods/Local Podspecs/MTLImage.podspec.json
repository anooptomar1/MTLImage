{
  "name": "MTLImage",
  "version": "0.1.0",
  "summary": "GPUImage, but with Metal",
  "description": "A work in progress...",
  "homepage": "https://github.com/<GITHUB_USERNAME>/MTLImage",
  "license": "MIT",
  "authors": {
    "mohssenfathi": "mmohssenfathi@gmail.com"
  },
  "source": {
    "git": "https://github.com/<GITHUB_USERNAME>/MTLImage.git",
    "tag": "0.1.0"
  },
  "platforms": {
    "ios": "0.0",
    "tvos": "9.0"
  },
  "tvos": {
    "exclude_files": "Pod/Classes/MTLImage/MTLCamera.swift"
  },
  "requires_arc": true,
  "source_files": "Pod/Classes/**/*",
  "resources": [
    "Pod/Classes/CoreData/**/*.xcdatamodeld",
    "Pod/Classes/**/*.metallib",
    "Pod/Assets/**/*.xcassets"
  ],
  "default_subspecs": "Core",
  "subspecs": [
    {
      "name": "Core"
    },
    {
      "name": "FaceDetection",
      "xcconfig": {
        "OTHER_CFLAGS": "$(inherited) -MTLIMAGE_FACE_DETECTION"
      }
    }
  ]
}
